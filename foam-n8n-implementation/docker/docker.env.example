# =============================================================================
# FOAM N8N Docker Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values for your deployment
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=foam
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=n8n

# -----------------------------------------------------------------------------
# N8N Configuration
# -----------------------------------------------------------------------------
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_secure_password
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=Australia/Brisbane
NODE_ENV=production
N8N_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Database Connection (used by N8N)
# -----------------------------------------------------------------------------
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=foam
DB_POSTGRESDB_PASSWORD=change_this_secure_password

# -----------------------------------------------------------------------------
# Ollama Configuration
# -----------------------------------------------------------------------------
OLLAMA_HOST=0.0.0.0
OLLAMA_PORT=11434

# Set to 'true' to automatically pull models on container start
FOAM_PULL_MODELS=false

# -----------------------------------------------------------------------------
# API Keys (Required for full functionality)
# -----------------------------------------------------------------------------
# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=

# OpenAI API Key for GPT models
OPENAI_API_KEY=

# SerpAPI Key for web search
SERP_API_KEY=

# NCBI API Key for PubMed access (optional)
NCBI_API_KEY=

# -----------------------------------------------------------------------------
# Notifications (Optional)
# -----------------------------------------------------------------------------
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=

# Email configuration (for SMTP notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# -----------------------------------------------------------------------------
# Production Settings (for HTTPS/SSL)
# -----------------------------------------------------------------------------
# Domain name for production deployment
DOMAIN=localhost

# Email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=

# Traefik basic auth (generate with: htpasswd -nb admin password | sed -e s/\\$/\\$\\$/g)
TRAEFIK_BASIC_AUTH=
