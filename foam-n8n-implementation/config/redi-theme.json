{
  "$schema": "https://redi.health.qld.gov.au/foam/schemas/redi-theme.schema.json",
  "name": "REdI Brand Theme",
  "version": "1.0.0",
  "description": "Resuscitation EDucation Initiative digital design tokens. Derived from REdI Brand Guidelines v1.0, January 2026.",
  "colors": {
    "primary": {
      "coral": "#E55B64",
      "coralAccessible": "#C94450",
      "coralDark": "#D14A53",
      "navy": "#1B3A5F",
      "teal": "#2B9E9E"
    },
    "secondary": {
      "lightTeal": "#8DD4D4",
      "lime": "#B8CC26",
      "sky": "#5DADE2",
      "yellow": "#F4D03F"
    },
    "neutral": {
      "black": "#000000",
      "darkGray": "#333333",
      "mediumGray": "#666666",
      "lightGray": "#F5F5F5",
      "white": "#FFFFFF"
    },
    "semantic": {
      "error": "#DC3545",
      "warning": "#FFC107",
      "success": "#28A745",
      "info": "#17A2B8",
      "link": "#0066CC",
      "linkHover": "#0056B3"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Montserrat', 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif",
      "display": "'Bebas Neue', 'Impact', 'Arial Black', sans-serif"
    },
    "fontSize": {
      "h1": "2.5rem",
      "h2": "2rem",
      "h3": "1.5rem",
      "h4": "1.25rem",
      "body": "1rem",
      "small": "0.875rem",
      "caption": "0.75rem"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "h1": 1.2,
      "h2": 1.25,
      "h3": 1.3,
      "h4": 1.4,
      "body": 1.6,
      "small": 1.5,
      "caption": 1.4
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem"
  },
  "borderRadius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.1)",
    "md": "0 4px 6px rgba(0,0,0,0.1)",
    "lg": "0 10px 25px rgba(0,0,0,0.15)"
  },
  "cssVariables": {
    "--redi-coral": "#E55B64",
    "--redi-coral-accessible": "#C94450",
    "--redi-coral-dark": "#D14A53",
    "--redi-navy": "#1B3A5F",
    "--redi-teal": "#2B9E9E",
    "--redi-light-teal": "#8DD4D4",
    "--redi-lime": "#B8CC26",
    "--redi-sky": "#5DADE2",
    "--redi-yellow": "#F4D03F",
    "--redi-black": "#000000",
    "--redi-dark-gray": "#333333",
    "--redi-medium-gray": "#666666",
    "--redi-light-gray": "#F5F5F5",
    "--redi-white": "#FFFFFF",
    "--redi-error": "#DC3545",
    "--redi-warning": "#FFC107",
    "--redi-success": "#28A745",
    "--redi-info": "#17A2B8",
    "--redi-link": "#0066CC",
    "--redi-link-hover": "#0056B3",
    "--font-primary": "'Montserrat', sans-serif",
    "--font-display": "'Bebas Neue', sans-serif",
    "--space-xs": "0.25rem",
    "--space-sm": "0.5rem",
    "--space-md": "1rem",
    "--space-lg": "1.5rem",
    "--space-xl": "2rem",
    "--space-2xl": "3rem",
    "--radius-sm": "4px",
    "--radius-md": "8px",
    "--radius-lg": "12px",
    "--radius-full": "9999px",
    "--shadow-sm": "0 1px 2px rgba(0,0,0,0.1)",
    "--shadow-md": "0 4px 6px rgba(0,0,0,0.1)",
    "--shadow-lg": "0 10px 25px rgba(0,0,0,0.15)"
  },
  "accessibility": {
    "contrastRatios": {
      "navyOnWhite": "11.6:1 (AAA)",
      "whiteOnNavy": "11.6:1 (AAA)",
      "coralOnWhite": "3.5:1 (AA Large only - white text on #E55B64)",
      "whiteOnCoralAccessible": "4.7:1 (AA Normal text - white on #C94450)",
      "whiteOnCoral": "3.5:1 (AA Large only - white text on #E55B64)",
      "linkBlueOnWhite": "5.6:1 (AA Normal text)",
      "linkHoverOnWhite": "7.0:1 (AA Normal text - #0056B3)",
      "darkGrayOnWhite": "12.6:1 (AAA)",
      "whiteOnAlertRed": "4.5:1 (AA Normal text)",
      "tealOnWhite": "3.2:1 (Border/accent use only, not for text)",
      "successGreenWithWhiteText": "3.1:1 (AA Large only - white text on #28A745)"
    },
    "colorUsageGuidelines": {
      "coral": "Use #C94450 (coralAccessible) for buttons with white text to meet AA normal text standards. Use #E55B64 (coral) for large/bold text only or hover states (requires ≥14px bold).",
      "links": "Use #0066CC (link blue) for all hyperlinks to meet WCAG AA 4.5:1 contrast on white backgrounds. Hover state #0056B3 provides even higher contrast (7.0:1). Sky blue (#5DADE2) is for decorative purposes only.",
      "teal": "Use as border/accent color only, not for text content. Pair with dark text (#333333) when used as background.",
      "yellow": "Use as background color only with dark text (#333333). Do not use for text content.",
      "successGreen": "Use white text on #28A745 only for large/bold text (≥18px or ≥14px bold). For normal text size buttons/messages, consider using Alert Red (#DC3545) or REdI Navy (#1B3A5F) instead."
    },
    "focusOutline": "3px solid #2B9E9E",
    "focusOutlineOffset": "2px",
    "minimumBodyTextSize": "16px",
    "minimumBodyLineHeight": 1.5,
    "maximumLineLength": "75ch"
  },
  "subBrands": {
    "als": {
      "name": "ALS (Advanced Life Support)",
      "primaryColor": "#1B3A5F",
      "accentColor": "#F4D03F"
    },
    "react": {
      "name": "ReACT (Response to Acute Crisis Training)",
      "primaryColor": "#E55B64"
    },
    "rash": {
      "name": "RASH (Response to Anaphylaxis & Severe Hypersensitivity)",
      "primaryColor": "#5DADE2"
    }
  },
  "grafana": {
    "serviceUp": "#2B9E9E",
    "serviceDown": "#DC3545",
    "thresholdGood": "#28A745",
    "thresholdWarning": "#FFC107",
    "thresholdCritical": "#DC3545",
    "seriesN8N": "#E55B64",
    "seriesPostgres": "#1B3A5F",
    "seriesOllama": "#2B9E9E",
    "annotationIcon": "#2B9E9E"
  },
  "notifications": {
    "urgencyHigh": {
      "badgeColor": "#DC3545",
      "backgroundColor": "#DC354510"
    },
    "urgencyMedium": {
      "badgeColor": "#FFC107",
      "backgroundColor": "#FFC10710"
    },
    "urgencyLow": {
      "badgeColor": "#17A2B8",
      "backgroundColor": "#17A2B810"
    },
    "buttonPrimary": {
      "background": "#C94450",
      "hoverBackground": "#E55B64",
      "text": "#FFFFFF"
    },
    "buttonSecondary": {
      "background": "#1B3A5F",
      "text": "#FFFFFF"
    },
    "buttonOutline": {
      "border": "#E55B64",
      "text": "#E55B64"
    }
  }
}
