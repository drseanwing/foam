{
  "$schema": "https://redi.health.qld.gov.au/foam/schemas/redi-theme.schema.json",
  "name": "REdI Brand Theme",
  "version": "1.0.0",
  "description": "Resuscitation EDucation Initiative digital design tokens. Derived from REdI Brand Guidelines v1.0, January 2026.",
  "colors": {
    "primary": {
      "coral": "#E55B64",
      "coralDark": "#D14A53",
      "navy": "#1B3A5F",
      "teal": "#2B9E9E"
    },
    "secondary": {
      "lightTeal": "#8DD4D4",
      "lime": "#B8CC26",
      "sky": "#5DADE2",
      "yellow": "#F4D03F"
    },
    "neutral": {
      "black": "#000000",
      "darkGray": "#333333",
      "mediumGray": "#666666",
      "lightGray": "#F5F5F5",
      "white": "#FFFFFF"
    },
    "semantic": {
      "error": "#DC3545",
      "warning": "#FFC107",
      "success": "#28A745",
      "info": "#17A2B8"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "'Montserrat', 'Segoe UI', 'Roboto', 'Helvetica Neue', sans-serif",
      "display": "'Bebas Neue', 'Impact', 'Arial Black', sans-serif"
    },
    "fontSize": {
      "h1": "2.5rem",
      "h2": "2rem",
      "h3": "1.5rem",
      "h4": "1.25rem",
      "body": "1rem",
      "small": "0.875rem",
      "caption": "0.75rem"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "h1": 1.2,
      "h2": 1.25,
      "h3": 1.3,
      "h4": 1.4,
      "body": 1.6,
      "small": 1.5,
      "caption": 1.4
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem"
  },
  "borderRadius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.1)",
    "md": "0 4px 6px rgba(0,0,0,0.1)",
    "lg": "0 10px 25px rgba(0,0,0,0.15)"
  },
  "cssVariables": {
    "--redi-coral": "#E55B64",
    "--redi-coral-dark": "#D14A53",
    "--redi-navy": "#1B3A5F",
    "--redi-teal": "#2B9E9E",
    "--redi-light-teal": "#8DD4D4",
    "--redi-lime": "#B8CC26",
    "--redi-sky": "#5DADE2",
    "--redi-yellow": "#F4D03F",
    "--redi-black": "#000000",
    "--redi-dark-gray": "#333333",
    "--redi-medium-gray": "#666666",
    "--redi-light-gray": "#F5F5F5",
    "--redi-white": "#FFFFFF",
    "--redi-error": "#DC3545",
    "--redi-warning": "#FFC107",
    "--redi-success": "#28A745",
    "--redi-info": "#17A2B8",
    "--font-primary": "'Montserrat', sans-serif",
    "--font-display": "'Bebas Neue', sans-serif",
    "--space-xs": "0.25rem",
    "--space-sm": "0.5rem",
    "--space-md": "1rem",
    "--space-lg": "1.5rem",
    "--space-xl": "2rem",
    "--space-2xl": "3rem",
    "--radius-sm": "4px",
    "--radius-md": "8px",
    "--radius-lg": "12px",
    "--radius-full": "9999px",
    "--shadow-sm": "0 1px 2px rgba(0,0,0,0.1)",
    "--shadow-md": "0 4px 6px rgba(0,0,0,0.1)",
    "--shadow-lg": "0 10px 25px rgba(0,0,0,0.15)"
  },
  "accessibility": {
    "contrastRatios": {
      "navyOnWhite": "12.5:1 (AAA)",
      "whiteOnNavy": "12.5:1 (AAA)",
      "coralOnWhite": "3.8:1 (AA Large)",
      "whiteOnCoral": "3.8:1 (AA Large)",
      "blackOnLightTeal": "8.2:1 (AAA)",
      "navyOnLightGray": "11.8:1 (AAA)"
    },
    "whiteOnCoralUsage": "White text on Coral backgrounds is restricted to large or bold UI text (e.g. primary buttons, headings) that meets WCAG 2.1 AA Large criteria. Do not use white on Coral for normal body text.",
    "whiteOnCoralMinimumText": {
      "minimumFontSize": "1.125rem",
      "minimumFontWeight": 600
    },
    "focusOutline": "3px solid #2B9E9E",
    "focusOutlineOffset": "2px",
    "minimumBodyTextSize": "16px",
    "minimumBodyLineHeight": 1.5,
    "maximumLineLength": "75ch"
  },
  "subBrands": {
    "als": {
      "name": "ALS (Advanced Life Support)",
      "primaryColor": "#1B3A5F",
      "accentColor": "#F4D03F"
    },
    "react": {
      "name": "ReACT (Response to Acute Crisis Training)",
      "primaryColor": "#E55B64"
    },
    "rash": {
      "name": "RASH (Response to Anaphylaxis & Severe Hypersensitivity)",
      "primaryColor": "#5DADE2"
    }
  },
  "grafana": {
    "serviceUp": "#2B9E9E",
    "serviceDown": "#DC3545",
    "thresholdGood": "#28A745",
    "thresholdWarning": "#FFC107",
    "thresholdCritical": "#DC3545",
    "seriesN8N": "#E55B64",
    "seriesPostgres": "#1B3A5F",
    "seriesOllama": "#2B9E9E",
    "annotationIcon": "#2B9E9E"
  },
  "notifications": {
    "urgencyHigh": {
      "badgeColor": "#DC3545",
      "backgroundColor": "#DC354510"
    },
    "urgencyMedium": {
      "badgeColor": "#FFC107",
      "backgroundColor": "#FFC10710"
    },
    "urgencyLow": {
      "badgeColor": "#17A2B8",
      "backgroundColor": "#17A2B810"
    },
    "buttonPrimary": {
      "background": "#E55B64",
      "hoverBackground": "#D14A53",
      "text": "#FFFFFF"
    },
    "buttonSecondary": {
      "background": "#1B3A5F",
      "text": "#FFFFFF"
    },
    "buttonOutline": {
      "border": "#E55B64",
      "text": "#E55B64"
    }
  }
}
